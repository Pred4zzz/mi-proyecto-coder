<h1>Productos</h1>
<div class="row">
  {{#each products}}
  <div class="col-md-4 mb-3">
    <div class="card">
      {{#if this.thumbnail}}<img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">{{/if}}
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text"><strong>$ {{this.price}}</strong></p>
        <div class="d-flex justify-content-between">
          <a href="/products/{{this._id}}" class="btn btn-sm btn-outline-primary">Ver</a>
          <button onclick="addToCart('{{this._id}}')" class="btn btn-sm btn-primary add-to-cart" data-id="{{this._id}}">Agregar al carrito</button>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
<div class="mt-3">
  {{#if hasPrevPage}}<a class="btn btn-sm btn-secondary" href="?page={{subtract page 1}}">Anterior</a>{{/if}}
  <span class="mx-2">PÃ¡gina {{page}} / {{totalPages}}</span>
  {{#if hasNextPage}}<a class="btn btn-sm btn-secondary" href="?page={{add page 1}}">Siguiente</a>{{/if}}
</div>
